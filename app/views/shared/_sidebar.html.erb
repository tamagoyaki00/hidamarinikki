<aside class="fixed top-0 left-0 hidden lg:flex lg:flex-col lg:w-64 h-screen backdrop-blur-md  bg-base-200/70 border-r border-primary">
  <div class="flex flex-col flex-1 items-start p-4 space-y-6">
    <div class="flex items-center">
        <%= image_tag "himawari.svg", alt: "ロゴ", class: "h-14 w-14" %>
        <%= link_to "ひだまり日記", home_path, class: "font-mplus font-bold text-primary ml-2 text-xl" %>
    </div>
    <%= link_to home_path, class: "flex items-center #{highlight_class(home_path)}" do %>
      <span class="material-symbols-outlined mr-4">home</span>
      <span>ホーム</span>
    <% end %>

    <%= link_to my_diaries_path, class: "flex items-center #{highlight_class(my_diaries_path)}" do %>
      <span class="material-symbols-outlined mr-4">menu_book</span>
      <span>マイ日記</span>
    <% end %>

    <%= link_to public_diaries_path, class: "flex items-center #{highlight_class(public_diaries_path)}" do %>
      <span class="material-symbols-outlined mr-4">groups</span>
      <span>みんなの日記</span>
    <% end %>

    <div data-controller="modal" class="flex items-center">
      <button data-action="click->modal#open" class="flex items-center cursor-pointer">
        <span class="material-symbols-outlined mr-4">account_circle</span>
        <span>アカウント設定</span>
      </button>
      <%= render "shared/settings_modal" %>
    </div>

    <%= link_to diary_writing_tips_path, class: "flex items-center #{highlight_class(diary_writing_tips_path)}" do %>
      <span class="material-symbols-outlined mr-4">lightbulb</span>
      <span>書き方ガイド</span>
    <% end %>

    <a href="https://docs.google.com/forms/d/e/1FAIpQLSeAxD9xpgfyw7umh9aqG0nLF2hP06vov-iPjQGZbyRDG1G0AQ/viewform?usp=sharing&ouid=107998614667783463395"
       target="_blank" rel="noopener noreferrer"
       class="flex items-center">
      <span class="material-symbols-outlined mr-4">mail</span>
      お問い合わせ
    </a>

    <div data-controller="modal" class="flex items-center">
      <button data-action="click->modal#open" class="flex items-center cursor-pointer">
        <span class="material-symbols-outlined mr-4">share</span>
        <span>ひだまり日記をシェア</span>
      </button>
      <%= render "shared/share_buttons_modal" %>
    </div>

    <%= link_to new_diary_path, class: "btn btn-primary btn-lg w-full" do %>
      <span>日記を書く</span>
    <% end %>
  </div>

  <div class="mt-auto p-4 text-sm border-t border-primary space-y-2">
    <div><%= link_to "利用規約", terms_of_service_path %></div>
    <div><%= link_to "プライバシーポリシー", privacy_policy_path %></div>


    <div data-controller="theme"
        data-theme-light-value="hidamarinikki"
        data-theme-dark-value="sunset">

      <label class="flex cursor-pointer gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <circle cx="12" cy="12" r="5" />
          <path d="M12 1v2M12 21v2M4.2 4.2l1.4 1.4M18.4 18.4l1.4 1.4M1 12h2M21 12h2M4.2 19.8l1.4-1.4M18.4 5.6l1.4-1.4" />
        </svg>

        <input type="checkbox" 
              value="sunset" 
              class="toggle theme-controller" 
              data-action="change->theme#toggle"
              data-theme-target="toggle" />

        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
        </svg>
      </label>
    </div>
  </div>

</aside>
