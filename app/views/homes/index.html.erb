<div class="flex flex-col items-center max-w-5xl mx-auto justify-center p-4">
  <div class="max-w-md mx-auto my-8">
    <%= link_to new_diary_path, class: "card card-body bg-primary shadow-xl rounded-lg p-6 text-center" do %>
      <h2 class="text-xl text-primary-content font-bold mb-2">日記を書く</h2>
      <p class="text-base text-gray-700">今日あった良かったことや、<br>
        ちょっと頑張ったことなどを書いてみよう！</p>
    <% end %>
  </div>

  <div class="flex flex-col items-center justify-center p-4"
     data-controller="ai-comment"
     data-ai-comment-diary-id-value="<%= params[:diary_id] %>"
     data-ai-comment-from-value="<%= params[:from] %>">


    <h1 class="text-2xl font-bold mb-2 flex items-center gap-2">
    幸せ瓶
    <% if current_user.happiness_level >= 15 %>
      <%= image_tag "level15.png", class: "w-8 h-8 inline-block" %>
    <% elsif current_user.happiness_level >= 5 %>
      <%= image_tag "level5.svg", class: "w-8 h-8 inline-block" %>
    <% elsif current_user.happiness_level >= 1 %>
      <%= image_tag "level1.svg", class: "w-8 h-8 inline-block" %>
    <% end %>
  </h1>


    <div id="happiness-jar-container" 
        data-controller="happiness-jar"
        data-happiness-jar-contents-value="<%= @diary_contents.map { |c| { id: c.id, happiness_image: asset_path(c.happiness_image) } }.to_json %>"
        data-happiness-jar-image-urls-value="<%= @happiness_image_urls.to_json %>"
        data-happiness-jar-added-ids-value="<%= @added_ids.to_json %>"
        data-happiness-jar-deleted-ids-value="<%= @deleted_ids.to_json %>">


      <div class="w-full flex justify-center">
        <div id="bottle-container"
            class="relative w-[300px] h-[450px] border-2 border-accent rounded-md bg-base-200 bg-opacity-70 shadow-lg overflow-hidden">

          <canvas id="happiness-canvas" 
                  width="300" 
                  height="450" 
                  style="position: absolute; top: 0; left: 0; z-index: 1;">
          </canvas>
        </div>
      </div>
      
      <input type="checkbox" id="full-jar-modal" class="modal-toggle"/>
      <div class="modal">
        <div class="modal-box relative aspect-[2/3] w-full sm:w-[600px] sm:aspect-[3/2]
                    flex flex-col items-center justify-center text-center overflow-hidden">

          <!-- コンテンツ -->
          <div class="relative z-10 text-center mt-8">
            <h3 class="font-bold text-2xl">おめでとうございます！</h3>
            <p class="py-4">
              幸せ瓶がいっぱいになりました 🎉<br>
              <span class="text-primary font-bold">
                幸せコレクター Lv.<%= current_user.happiness_level %>
              </span>
              の称号を獲得！
            </p>
          </div>

          <!-- フレーム画像（スマホとPCで切り替え） -->
          <picture>
            <source media="(min-width: 640px)" srcset="<%= asset_path("celebration-bg.png") %>">
            <img src="<%= asset_path("celebration-bg-sp.png") %>"
                alt=""
                class="absolute inset-0 w-full h-full object-contain pointer-events-none" />
          </picture>

          <div class="relative z-10 px-4 mt-6">
            <div class="flex flex-col justify-center space-y-4">
              <button id="next-jar-button" class="btn btn-neutral">
                次の瓶に貯める
              </button>

               <%= link_to "称号を見に行く", user_path(current_user), class: "btn btn-neutral" %>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>

  <div class="flex space-x-8">
    <!-- 継続日数 -->
    <div class="flex flex-col items-center mt-8">
      <span class="text-xl font-semibold">継続日数</span>
      <div class="text-4xl font-bold p-8 bg-base-200 rounded-2xl border-2 border-primary shadow-md mt-2">
        <%= current_user.diary_streak %>日
      </div>
    </div>  

      <!-- 幸せのかけら-->
    <div class="flex flex-col items-center mt-8">
      <span class="text-xl font-semibold">幸せのかけら</span>
      <div class="text-4xl font-bold p-8 bg-base-200 rounded-2xl border-2 border-primary shadow-md mt-2">
        <%= current_user.total_happiness_count %>個
      </div>
    </div>
  </div>

  <!-- グラフ-->
    <div data-controller="charts" class="space-y-4">
  <!-- タブ切り替え -->
  <div class="flex space-x-4 justify-center">
    <button data-action="click->charts#showWeek" data-charts-target="weekTab" class="px-4 py-2 bg-gray-300 text-gray-700 rounded">1週間</button>
    <button data-action="click->charts#showMonth" data-charts-target="monthTab" class="px-4 py-2 bg-gray-300 text-gray-700 rounded">1か月</button>
  </div>

    <div class="flex justify-between mt-8 my-4">
      <button data-action="click->charts#prevWeek" class="px-4 py-2 bg-gray-200 rounded">← 前の週</button>
      <button data-action="click->charts#nextWeek" class="px-4 py-2 bg-gray-200 rounded">次の週 →</button>
    </div>

    <div class="w-full h-80 md:h-96 lg:h-[500px]">
      <canvas id="happinessChart" data-charts-target="canvas" class="w-full h-full"></canvas>
    </div>
  </div>


  <script>
    const happinessData = <%= raw @happiness_data.to_json %>;

    const labels = happinessData.map(d => d.label);
    const fullLabels = happinessData.map(d => d.full_label);
    const counts = happinessData.map(d => d.count);

    const ctx = document.getElementById('happinessChart');
    const happinessChart = new Chart(ctx, {
      type: 'bar',
      data: {
        labels: labels,
        datasets: [{
          label: '',
          data: counts,
          backgroundColor: 'rgba(75, 192, 192, 0.6)'
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
          legend: { display: false },
          tooltip: {
            callbacks: {
              title: function(context) {
                return fullLabels[context[0].dataIndex] + ' の幸せの数';
              }
            }
          },
          title: {
            display: true,
            text: `${fullLabels[0]} ~ ${fullLabels[6]}`, // 週の範囲
            font: { size: 16 },
            align: 'center'
          }
        },
        scales: {
          y: { beginAtZero: true }
        }
      }
    });
  </script>

  </div>











