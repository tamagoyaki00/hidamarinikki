<div class="flex items-center justify-center mt-0 md:mt-10 px-0 md:px-4">
  <div class="card w-full max-w-lg bg-gradient-to-b from-secondary to-base-100 rounded-none shadow-none md:shadow-xl md:rounded-4xl p-8 flex items-center justify-center flex-col space-y-8">
    <h2 class="font-mplus text-xl md:text-2xl font-bold"><%= t('devise.sessions.new.title') %></h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "flex flex-col space-y-8 items-center" }) do |f| %>
      <div class="form-control w-full max-w-md">
        <label class="label">
          <span class="label-text font-semibold"><%= t('devise.shared.email') %></span>
        </label>
        <%= f.email_field :email, placeholder: t('devise.shared.placeholders.email'), class: "input input-primary w-full" %>
      </div>

      <div class="form-control w-full max-w-md" data-controller="password-visibility">
        <label class="label">
          <span class="label-text font-semibold"><%= t('devise.shared.password') %></span>
        </label>
        <% if @minimum_password_length %>
          <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
        <% end %>

        <div class="input-group relative">
          <%= f.password_field :password,
                placeholder: t('devise.shared.placeholders.password'),
                class: "input input-primary w-full pr-10",
                data: { "password-visibility-target" => "input" } %>

          <button type="button"
                  class="absolute inset-y-0 right-0 flex items-center pr-3 text-gray-500"
                  data-action="click->password-visibility#toggle">
            <!-- 開いた目のアイコン -->
            <svg data-password-visibility-target="iconOpen"
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 640 640"
                fill="currentColor"
                class="w-5 h-5 text-gray-500">
              <path d="M320 96C239.2 96 174.5 132.8 127.4 176.6C80.6 220.1 49.3 272 34.4 307.7C31.1 315.6 31.1 324.4 34.4 332.3C49.3 368 80.6 420 127.4 463.4C174.5 507.1 239.2 544 320 544C400.8 544 465.5 507.2 512.6 463.4C559.4 419.9 590.7 368 605.6 332.3C608.9 324.4 608.9 315.6 605.6 307.7C590.7 272 559.4 220 512.6 176.6C465.5 132.9 400.8 96 320 96zM176 320C176 240.5 240.5 176 320 176C399.5 176 464 240.5 464 320C464 399.5 399.5 464 320 464C240.5 464 176 399.5 176 320zM320 256C320 291.3 291.3 320 256 320C244.5 320 233.7 317 224.3 311.6C223.3 322.5 224.2 333.7 227.2 344.8C240.9 396 293.6 426.4 344.8 412.7C396 399 426.4 346.3 412.7 295.1C400.5 249.4 357.2 220.3 311.6 224.3C316.9 233.6 320 244.4 320 256z" />
            </svg>

            <!-- 閉じた目のアイコン  -->
            <svg data-password-visibility-target="iconClose"
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 640 640"
                fill="currentColor"
                class="w-5 h-5 text-gray-500 hidden">
              <path d="M73 39.1C63.6 29.7 48.4 29.7 39.1 39.1C29.8 48.5 29.7 63.7 39 73.1L567 601.1C576.4 610.5 591.6 610.5 600.9 601.1C610.2 591.7 610.3 576.5 600.9 567.2L504.5 470.8C507.2 468.4 509.9 466 512.5 463.6C559.3 420.1 590.6 368.2 605.5 332.5C608.8 324.6 608.8 315.8 605.5 307.9C590.6 272.2 559.3 220.2 512.5 176.8C465.4 133.1 400.7 96.2 319.9 96.2C263.1 96.2 214.3 114.4 173.9 140.4L73 39.1zM208.9 175.1C241 156.2 278.1 144 320 144C385.2 144 438.8 173.6 479.9 211.7C518.4 247.4 545 290 558.5 320C544.9 350 518.3 392.5 479.9 428.3C476.8 431.1 473.7 433.9 470.5 436.7L425.8 392C439.8 371.5 448 346.7 448 320C448 249.3 390.7 192 320 192C293.3 192 268.5 200.2 248 214.2L208.9 175.1zM390.9 357.1L282.9 249.1C294 243.3 306.6 240 320 240C364.2 240 400 275.8 400 320C400 333.4 396.7 346 390.9 357.1zM135.4 237.2L101.4 203.2C68.8 240 46.4 279 34.5 307.7C31.2 315.6 31.2 324.4 34.5 332.3C49.4 368 80.7 420 127.5 463.4C174.6 507.1 239.3 544 320.1 544C357.4 544 391.3 536.1 421.6 523.4L384.2 486C364.2 492.4 342.8 496 320 496C254.8 496 201.2 466.4 160.1 428.3C121.6 392.6 95 350 81.5 320C91.9 296.9 110.1 266.4 135.5 237.2z" />
            </svg>
          </button>
        </div>
      </div>

      <div class="actions">
        <%= f.submit t('devise.sessions.new.sign_in'), class: "btn btn-primary font-mplus w-full max-w-md px-10" %>
      </div>
    <% end %>

    <div class="divider"></div>
    <p>お持ちのアカウントでログイン</p>

    <%= button_to user_google_oauth2_omniauth_authorize_path, data: { turbo: false }, class: "btn bg-white text-black border-[#e5e5e5]" do %>
      <svg aria-label="Google logo" width="16" height="16" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512">
        <g>
          <path d="m0 0H512V512H0" fill="#fff"></path>
          <path fill="#34a853" d="M153 292c30 82 118 95 171 60h62v48A192 192 0 0190 341"></path>
          <path fill="#4285f4" d="m386 400a140 175 0 0053-179H260v74h102q-7 37-38 57"></path>
          <path fill="#fbbc02" d="m90 341a208 200 0 010-171l63 49q-12 37 0 73"></path>
          <path fill="#ea4335" d="m153 219c22-69 116-109 179-50l55-54c-78-75-230-72-297 55"></path>
        </g>
      </svg>
      Googleアカウント
    <% end %>

    <div class="divider"></div>

    <div class="text-center">
      <%= link_to t('devise.sessions.new.sign_up'), new_registration_path(resource_name), class: "text-sm hover:underline" %>
    </div>
  </div>
</div>
